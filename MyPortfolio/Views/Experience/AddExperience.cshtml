@model Entities.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Add Experience</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Corporate Name</label>
                    <input type="text" asp-for="Head" class="form-control"/>
                </div>

                <div class="form-group">
                    <label>Role</label>
                    <input type="text" asp-for="Title" class="form-control"/>
                </div>

                <div class="form-group">
                    <label>Date</label>
                    <input type="text" asp-for="Date" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" asp-for="Description" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-dark" href="/Experience/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>
