@using Entities
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experience List</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Kurum İsmi</th>
                        <th>Rol</th>
                        <th>Tarih</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ExperienceId</td>
                            <td>@item.Head</td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td>
                                <a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Delete</a>
                            </td>
                            <td>
                                <a href="/Experience/EditExperience/@item.ExperienceId" class="btn btn-outline-warning">Update</a>
                            </td>
                            
                        </tr>
                    }

                    </tbody>
                </table>
                <a href="/Experience/AddExperience" class="btn btn-outline-success">New Add Experience</a>
            </div>
        </div>
    </div>
</div>

<!-- Mesaj bildirimleri hatası için _NewAdminLayout'da yorum satırına aldım -->

<script src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/vendors/js/vendor.bundle.base.js"></script>
