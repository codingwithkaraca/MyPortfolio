<script>
    // kısa tarihi alma
    function getDateFromLongDate(date){
        longDate = date.split('T');
        
        var d = new Date(longDate);
        day = d.getDate().toString().padStart(2, '0');
        month = (d.getMonth() + 1).toString().padStart(2, '0');
        year = d.getFullYear();
        
        shortDate = [day,month,year].join("-");
        
        return shortDate;
    }
    
    // sadece saati alma
    function getTimeFromLongTime(time){
        var longTime = time.split('T');
        
        var date = new Date(longTime);
        var hour = date.getHours().toString().padStart(2, '0');
        var minute = date.getMinutes().toString().padStart(2, '0');
        
        shortTime = hour+":"+ minute;
        return shortTime;
        
    }
    
</script>
