@using Entities  @*kullanacağımız entitynin bulunduğu yer demek*@
@model List<Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://i.hizliresim.com/ifv0xi8.jpeg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    <div class="home-content">

        <div class="row home-content__main">

            <h3>Hello There</h3>
            @foreach (var item in Model)
            {
                <h1>
                    @item.Title<br>
                    @item.Description<br>
                </h1>
            }

            <div class="home-content__buttons">
                <a href="#works" class="smoothscroll btn btn--stroke">
                    Latest Projects
                </a>
                <a href="#about" class="smoothscroll btn btn--stroke">
                    More About Me
                </a>
            </div>

            <div class="home-content__scroll">
                <a href="#about" class="scroll-link smoothscroll">
                    <span>Scroll Down</span>
                </a>
            </div>

        </div>

    </div> <!-- end home-content -->

    <ul class="home-social">

        <li>
            <a href="https://github.com/codingwithkaraca">
                <i class="im im-github" aria-hidden="true"></i><span>Github</span>
            </a>
        </li>
        <li>
            <a href="https://www.facebook.com/alper0karaca/">
                <i class="im im-facebook" aria-hidden="true"></i><span>Facebook</span>
            </a>
        </li>
        <li>
            <a href="https://www.instagram.com/alper0karaca/">
                <i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span>
            </a>
        </li>
    </ul>
    <!-- end home-social -->

</section> <!-- end s-home -->