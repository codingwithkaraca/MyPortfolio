@using Entities
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Portfolio List</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>SubTitle</th>
                        <th>ImageUrl</th>
                        <th>Url</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PortfolioId</td>
                            <td>@item.Title</td>
                            <td>@item.SubTitle</td>
                            <td>@item.ImageUrl</td>
                            <td>@item.Url</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger">Delete</a>
                            </td>
                            <td>
                                <a href="/Portfolio/EditPortfolio/@item.PortfolioId" class="btn btn-outline-warning">Update</a>
                            </td>
                            
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
            <br>
            <a href="/Portfolio/AddPortfolio" class="btn btn-outline-success">New Add Portfolio</a>
        </div>
    </div>
</div>

<!-- Mesaj bildirimleri hatası için _NewAdminLayout'da yorum satırına aldım -->

