@model Entities.Portfolio
@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "_AdminLayout";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Edit Portfolio</p>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="PortfolioId" class="form-control"/>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" asp-for="Title" class="form-control"/>
                </div>

                <div class="form-group">
                    <label>SubTitle</label>
                    <input type="text" asp-for="SubTitle" class="form-control"/>
                </div>

                <div class="form-group">
                    <label>ImageUrl</label>
                    <input type="text" asp-for="ImageUrl" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Url</label>
                    <input type="text" asp-for="Url" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" asp-for="Description" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-dark" href="/Portfolio/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>