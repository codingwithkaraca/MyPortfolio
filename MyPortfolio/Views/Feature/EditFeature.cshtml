@model Entities.Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "_AdminLayout";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Edit Feature</p>
            <form method="post">
                <input type="hidden" asp-for="FeatureId" class="form-control"/>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" asp-for="Title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea rows="4" class="form-control" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a class="btn btn-dark" href="/Feature/Index">İptal</a>
            </form>
        </div>
    </div>
</div>
