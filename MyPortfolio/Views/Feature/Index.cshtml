@using Entities
@model List<Feature>
@{
    ViewData["Title"] = "Feature";
    Layout = "_AdminLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Feature</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FeatureId</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="/Feature/EditFeature/@item.FeatureId" class="btn btn-outline-warning">Update</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Mesaj bildirimleri hatası için _NewAdminLayout'da yorum satırına aldım -->

