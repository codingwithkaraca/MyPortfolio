@model Entities.About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Add About</p>
            <form class="forms-sample" method="post">
                <input type="hidden" asp-for="AboutId" class="form-control"/>
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" asp-for="Title" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>SubDescription</label>
                    <input type="text" asp-for="SubDescription" class="form-control"/>
                </div>

                <div class="form-group">
                    <label>Details</label>
                    <input type="text" asp-for="Details" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a class="btn btn-dark" href="/About/Index">Cancel</a>
            </form>
        </div>
    </div>
</div>