@using Entities
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About List</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>SubDescription</th>
                        <th>Details</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AboutId</td>
                            <td>@item.Title</td>
                            <td>@item.SubDescription</td>
                            <td>@item.Details</td>
                        </tr>
                        <td>
                            <a href="/About/EditAbout/@item.AboutId" class="btn btn-outline-warning">Update</a>
                        </td>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Mesaj bildirimleri hatası için _NewAdminLayout'da yorum satırına aldım -->

